{
  "compilerOptions": {
    "ignoreDeprecations": "7.0",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/config/*": [
        "src/config/*"
      ],
      "@/controllers/*": [
        "src/controllers/*"
      ],
      "@/services/*": [
        "src/services/*"
      ],
      "@/repositories/*": [
        "src/repositories/*"
      ],
      "@/middleware/*": [
        "src/middleware/*"
      ],
      "@/routes/*": [
        "src/routes/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/validators/*": [
        "src/validators/*"
      ],
      "@/models/*": [
        "src/database/sequelize-models/*"
      ],
      "@/database/*": [
        "src/database/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}